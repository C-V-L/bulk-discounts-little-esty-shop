<h1>Invoice ID: <%=@invoice.id %></h1>

<p>Invoice Status: <%=@invoice.status %></p>
<p>Invoice Created at: <%=@invoice.created_at.strftime("%A, %B %d, %Y") %></p>
<p>Customer: <%=@invoice.customer.first_name %> <%= @invoice.customer.last_name %></p>
<br>

<% @invoice.invoice_items.each do |thing| %>
<div id="invoice_item-<%= thing.item.id %>">
	<p> Item: <%= thing.item.name %></p>
	<p> Quantity: <%= thing.quantity %></p>
	<p>Price: <%= number_to_currency(thing.unit_price / 100.0) %></p>
	<p>Item Status: <%= thing.status %></p>
	<br>
<% end %>

